<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RG_SqlLite.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de Registro"/>

            <Entry x:Name="txtNombre" Placeholder="Ingresu su nombre"/>
            <Entry x:Name="txtusuario" Placeholder="Ingrese su usuario"/>
            <Entry x:Name="txtClave" Placeholder="Ingrese su clave"/>

            <Button x:Name="btnGuardar" Text="Guardar" Clicked="btnGuardar_Clicked"/>
            <Button x:Name="brnSalir" Text="Salir" Clicked="brnSalir_Clicked"/>
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>